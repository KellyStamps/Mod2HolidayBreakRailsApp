<% if flash[:error]%>
  <% flash[:error].each do |err| %>
    <p><%= err %></p>
  <% end%>
<% end%>

<h1>Create a New Building</h1>

<%= form_for @building do |f| %>
  Name: <%= f.text_field :name %><br><br>

  Date Built (ex: 'January 1, 2000'): <%= f.text_field :date_built %><br> <br>

  Address (ex: '1313 Mockingbird Lane, Springfield, MO 65738'): <%= f.text_field :address%><br><br>

  City ID: <%= f.number_field :city_id %><br><br>

  Historical Figure ID: <%= f.number_field :figure_id %><br><br>

  <%= f.submit %>
<% end %>
