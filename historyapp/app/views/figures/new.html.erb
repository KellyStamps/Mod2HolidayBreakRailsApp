
<% if flash[:error]%>
  <% flash[:error].each do |err| %>
    <p><%= err %></p>
  <% end%>
<% end%>

<h1>Create a New Person</h1>

<%= form_for @figure do |f| %>
  Name: <%= f.text_field :name%><br><br>

  Birth Date (ex: 'January 1, 2000'): <%= f.text_field :birth_date%><br><br>

  Death Date (ex: 'January 1, 2000'):<br><br>
  <i>Please write "still living" if applicable</i><br>
   <%= f.text_field :death_date%><br>

  <br><br>

  Hometown (ex: 'Republic, MO'): <%= f.text_field :hometown%><br><br>

  Profession: <%= f.text_field :profession%><br><br>

  Gender (ex: 'M' or 'F'): <%= f.text_field :gender%>

  <br><br>

  Short Biography: <%= f.text_field :bio%><br><br>

  <%= f.submit, class: "btn btn-primary"  %>
<% end %>
