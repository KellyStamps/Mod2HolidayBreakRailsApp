<div class="row">

  <div class="col s12 center">
    <h3><%= @city.name %></h3>
    <h4><%= @city.description %></h4>
    <form action="<%="/cities/#{@city.id}/edit"%>">
      <input type="submit" value="Edit Information" />
    </form>
    <br>
  </div>

  <div class="col s12 center">
    <%= image_tag "city_#{@city.id}.jpg" %>
  </div>

  <div class="col 3 left center">
    <h5>Historic Buildings</h5>
    <% @city.building_list.each do |build| %>
      <p><%= link_to build.name, build %></p>
    <%end%>
    <form action="/buildings/new">
      <input type="submit" value="Create a New Building"  />
    </form>
  </div>

  <div class="col 3 offset-s1 center">
    <h5>Historic Landmarks</h5>
    <% @city.landmark_list.each do |land| %>
      <p><%= link_to land.name, land %></p>
    <%end%>
    <form action="/landmarks/new">
      <input type="submit" value="Create a New Landmark" />
    </form>
  </div>

  <div class="col 3 right center">
    <h5>Historic Figures</h5>
    <% @city.figure_list.each do |fig| %>
      <p><%= link_to fig.name, fig %></p>
    <%end%>
    <form action="/figures/new">
      <input type="submit" value="Create a New Person" />
    </form>
  </div>

</div>
