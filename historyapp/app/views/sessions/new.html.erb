<% if flash[:error] %>
  <p><%= flash[:error][0] %></p>
<%end%>

<h1>Log In</h1>

<%= form_tag login_path do %>
  <%= label_tag :name %>
  <%= text_field_tag :'user[name]' %>

  <%= label_tag :password %>
  <%= password_field_tag :'user[password]' %>

  <%= submit_tag "Log In", class: "btn btn-primary"  %>
<%end%>
